# Containerfile.dev -- for use by developers cloning an existing Rails PBR project.
# Build context must be the project root (where Gemfile lives), with rails_pbr/ as a subdirectory.
# podman-setup-clone.sh handles this automatically.

ARG RUBY_VERSION
ARG DEBIAN_RELEASE

FROM ruby:${RUBY_VERSION}-${DEBIAN_RELEASE}

WORKDIR /box

COPY rails_pbr/setup-scripts/install-node-npm-yarn.sh .

RUN apt update && \
    apt install -y --no-install-recommends \
    build-essential \
    curl \
    wget \
    graphviz \
    imagemagick \
    libpq-dev \
    libvips \
    vim \
    nano \
    pkg-config \
    postgresql-client \
    fzf

RUN chmod +x install-node-npm-yarn.sh && ./install-node-npm-yarn.sh

RUN gem update --system && \
    gem install bundler && \
    gem install rails

# Install this app's dependencies
COPY Gemfile Gemfile.lock ./
RUN bundle install
